<head>
    <link href="/styles/viewTickets.css" rel="stylesheet"/>
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-sm">
    
      <a class="navbar-brand logo" href="/">
        <img src="/images/ticketmaster - 11@2x.png" class="img-fluid" id="logo" alt="TicketScholar Logo" style="width: 20rem;">
      </a>
      <button class="navbar-toggler custom-toggler" data-toggle="collapse" data-target="#collapse_nav">
        <span class="navbar-toggler-icon"></span>
      </button>      
      <div class="collapse navbar-collapse" id="collapse_nav">
      <ul class="navbar-nav">
        
        <li class="nav-item">
          <div class="nav-link">
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="darkSwitch">
              <label class="custom-control-label pl-2" id="label" for="darkSwitch"></label>
            </div>
          </div>                   
        </li>
      </ul>        
      </div>
    </nav>
  </header>
  <main class="bg-light">
    <div class="wrapper">
        <!--Sidebar-->
      <nav id="sidebar">
        <div class="sidebar-header">
          <h3>Firstname Lastname</h3>
        </div>

        <ul class="list-unstyled components">
          <li class="active">
            <a href="#">Home</a>
          </li>
          <li>
            <a href="#">Orders</a>
          </li>
          <li>
            <a href="#">Listings</a>
          </li>
          <li>
            <a href="#">Sales</a>
          </li>
          <li>
            <a href="#">Settings</a>
          </li>
        </ul>

      </nav>

      <!--Page Content-->
      <div id="content">

        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
    
                <button type="button" id="sidebarCollapse" class="btn btn-primary">
                    <i class="fas fa-align-left"></i>
                    <span></span>
                </button>
    
            </div>
        </nav>

        <div class="title">
          <h1>Profile</h1>
        </div>

        <div class="section">
          <h6>COMING UP</h6>
          <hr style="border: 1px solid grey">
          {{#if tickets.length}}
          <div class="display-tickets">
            {{#each tickets as |ticket|}}
            {{> tickets}}
            {{/each}}
          </div>
          {{else}}
          <p>You don't have any upcoming events scheduled right now.</p>
          {{/if}}
        </div>
        <div class="section">
          <h6>Listings</h6>
          <hr style="border: 1px solid grey">
          <p>You don't have any listings right now.</p>
        </div>
        <div class="break">
            <div class="section half">
            <h6>Sales</h6>
            <hr style="border: 1px solid grey">
            <p>You don't have any sales right now.</p>
            </div>
            <div class="section half">
            <h6>Payments</h6>
            <hr style="border: 1px solid grey">
            <a href="#">View payments statuses</a>
            </div>            
        </div>
        <div class="section fx10affrw">
          <div>
            <div class="left">
              Contact Info
            </div>
            <div class="right">
              <a href="#">Edit contact Info</a>
              <span class="divide"></span>
              <a href="#">Edit Address</a>
              <span class="divide"></span>
              <a href="#">Change Password</a>
            </div>
          </div>
          <br>
          <hr class="hr">
          <div class="user-info">
          <div class="user-name">
            {{user.first_name}} {{user.last_name}}
          </div>
          <div class="user-details">
            <div class="phone-email">
              <div>+1 8299341203</div>
              <div>test.email@memes.com</div>
            </div>
          </div>
          </div>
        </div>      
      </div>
    </div>
  </main>
</body>  

    <script src="./scripts/sideBar.js"></script>